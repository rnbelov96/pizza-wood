{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "code": 125 }],
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "arrow-parens": ["error", "as-needed"],
    "space-before-function-paren": ["error", "never"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never"
      }
    ]
  }
}
